<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <!--实现应用背景颜色渐变-->
        <shape android:shape="rectangle">
            <!--实现应用背景颜色渐变-->
            <corners android:radius="4dp" />
            <gradient
                android:angle="0"
                android:centerColor="#f75366"
                android:endColor="#f64358"
                android:startColor="#f86473" />
            <size android:height="86dp" />
        </shape>
    </item>
</layer-list>